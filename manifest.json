{
  "name": "Auto complete",
  "description": "Base Level Extension",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "identity",
    "identity.email",
    "storage",
    "scripting",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>", "https://docs.google.com/*"],
  "content_scripts": [
    {
      "matches": ["<all_urls>", "https://docs.google.com/document/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
